<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.TableViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Button onAction="#goBack" styleClass="back-button" text="&lt; Назад" />
        <Label styleClass="header-label" text="Список обладателей грантов" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Поиск:" />
        <TextField fx:id="searchField" promptText="Введите ФИО, ИКТ, ВУЗ..." HBox.hgrow="ALWAYS" />
    </HBox>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="numberCol" prefWidth="50.0" text="№" />
            <TableColumn fx:id="iinCol" prefWidth="120.0" text="ИКТ" />
            <TableColumn fx:id="fullNameCol" prefWidth="300.0" text="ФИО" />
            <TableColumn fx:id="scoreCol" prefWidth="70.0" text="Балл" />
            <TableColumn fx:id="universityNameCol" prefWidth="300.0" text="Название ВУЗа" />
            <TableColumn fx:id="quotaCol" prefWidth="100.0" text="Квота" />
            <TableColumn fx:id="specialtyNameCol" prefWidth="400.0" text="Специальность" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Button fx:id="loadButton" onAction="#handleLoadPdf" styleClass="menu-button" text="Загрузить PDF" />
        <Label fx:id="statusLabel" text="Пожалуйста, загрузите PDF файл." />
    </HBox>
</VBox>